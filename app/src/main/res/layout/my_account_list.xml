<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/account_item_holder"
        android:layout_width="match_parent"
        android:gravity="left|center"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/account_image_id_holder"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/myaccount_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/account_image_id_holder"
            android:text=""
            android:layout_marginLeft="10dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/myaccount_item_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/myaccount_item"
            android:text=""
            android:gravity="right"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>